<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Monacco" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_900</item>
        <item name="colorPrimaryVariant">@color/gray_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_900</item>
        <item name="colorSecondaryVariant">@color/orange_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:colorPrimary">@color/orange_700</item>
        <item name="android:colorEdgeEffect">@color/orange_700</item>

        <item name="colorPrimaryDark">@color/orange_900</item>

        <!-- Calendar -->
        <item name="materialCalendarStyle">@style/Widget.MaterialComponents.MaterialCalendar</item>
        <item name="materialCalendarFullscreenTheme">
            @style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen
        </item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar
        </item>
    </style>

    <style name="MaterialCalendarTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">

        <!-- Main colors -->
        <item name="colorPrimary">@color/orange_700</item>
        <item name="colorOnPrimary">@color/gray_900</item>
        <item name="colorSurface">@color/gray_900</item>

        <!-- Header -->
        <item name="materialCalendarHeaderLayout">@style/HeaderLayout</item>
        <item name="materialCalendarHeaderTitle">@style/HeaderTitle</item>

        <!-- Buttons -->
        <item name="buttonBarPositiveButtonStyle">@style/TextButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/TextButton</item>

        <!-- Text -->
        <item name="materialThemeOverlay">@style/ThemeOverlayGrayText</item>

        <!-- Shape -->
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>

    </style>


    <style name="TextButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/orange_700</item>
    </style>

    <style name="HeaderLayout">
        <item name="android:background">@color/orange_700</item>
    </style>

    <style name="HeaderTitle">
        <item name="android:textColor">@color/gray_900</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ThemeOverlayGrayText" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorSurface">@color/gray_900</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="colorPrimary">@color/gray_700</item>

        <item name="colorControlActivated">@color/orange_700</item>
        <item name="colorControlHighlight">@color/orange_700</item>
        <item name="colorControlNormal">@color/orange_700</item>
    </style>
</resources>